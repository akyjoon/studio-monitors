<div class="container form_margin">
  <div class="row">

    <form action="/monitors/{{monitor.id}}?_method=PUT" method="post">
      <div class="container">
        <h1>Edit Monitor</h1>
        <div class="row">
          <div class="form-group col-md-6">
            <input type="hidden" name="_method" value="PUT">
            <label for="model">Model</label>
            <input type="text" class="form-control" name="model" value="{{monitor.model}}">
          </div>
          <div class="form-group col-md-6">
            <label for="company">Company</label>
            <input type="text" class="form-control" name="company" value="{{monitor.company}}">
          </div>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea type="text" class="form-control" name="description">{{monitor.description}}</textarea>
        </div>
        <div class="form-group">
          <label for="imgurl">Image URL</label>
          <input type="text" class="form-control" name="imgurl" value="{{monitor.imgurl}}">
        </div>
        <input type="submit" value="Save">
      </div>
    </form>
  </div>
</div>